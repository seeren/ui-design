{
  "name": "ui-design",
  "description": "Mobile first component helper ",
  "version": "2.1.3",
  "keywords": [
    "ui",
    "html",
    "css",
    "javascript",
    "helper"
  ],
  "homepage": "https://seeren.github.io/ui-design/",
  "author": "Cyril Ichti",
  "scripts": {
    "start": "npm run serve",
    "serve": "npm run sync | npm run babelify | npm run sassify",
    "babelify": "./node_modules/.bin/watchify ./src/index.js -t [babelify] -o ./dist/ui-design.js",
    "sassify": "./node_modules/.bin/node-sass --watch ./src/index.scss ./dist/ui-design.css",
    "coverage": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc ./node_modules/.bin/mocha --recursive test/unit",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "sync": "./node_modules/.bin/browser-sync start --server --files ./dist/ui-design.* ./index.html",
    "test": "./node_modules/.bin/mocha --require babel-register --recursive test/unit"
  },
  "style": "www/dist/index.css",
  "sass": "src/index.scss",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/seeren/ui-design"
  },
  "license": "MIT",
  "devDependencies": {
    "babelify": "latest",
    "babel-plugin-istanbul": "latest",
    "babel-preset-env": "latest",
    "babel-register": "latest",
    "browser-sync": "latest",
    "chai": "latest",
    "cross-env": "latest",
    "coveralls": "latest",
    "jsdom": "latest",
    "mocha": "latest",
    "mocha-lcov-reporter": "latest",
    "node-sass": "latest",
    "nyc": "latest",
    "sinon": "latest",
    "watchify": "latest"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "src/",
    "test/",
    "{dist}/"
  ]
}
